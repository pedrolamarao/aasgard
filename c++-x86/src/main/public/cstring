#pragma once

#include <cstddef>


//! Declarations

namespace std
{
  int memcmp ( void const * x, void const * y, size_t count );
}

//! Inline definitions

namespace std
{
  inline
  int memcmp ( void const * x, void const * y, size_t count )
  {
    char const * a = (char const *) x;
    char const * b = (char const *) y;

    for (size_t i = 0; i < count; ++i)
      if ((* a) < (* b)) return -1;
      else if ((* a) > (* b)) return 1;

    return 0;
  }
}
